<?xml version='1.0' encoding='utf-8'?>
<widget id="com.empireoffire.recordingstudio" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Empire of Fire</name>
    <description>
        Recording Studio - A multi-track audio recording and editing application
    </description>
    <author email="dev@empireoffire.com" href="https://github.com/guicash663/empire-of-fire">
        Empire of Fire Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="33" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <feature name="Microphone">
        <param name="android-package" value="org.apache.cordova.audioinput.AudioInputCapture" />
    </feature>
</widget>
